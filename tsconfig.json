{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "baseUrl": ".",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@app/*": [
        "./frontend/app/*"
      ],
      "@ui/*": [
        "./frontend/ui/*"
      ],
      "@domain/*": [
        "./frontend/domain/*"
      ],
      "@application/*": [
        "./frontend/application/*"
      ],
      "@infrastructure/*": [
        "./frontend/infrastructure/*"
      ],
      "@shared/*": [
        "./frontend/shared/*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}